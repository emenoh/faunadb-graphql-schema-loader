{
  "compilerOptions": {
    "module": "none",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2018",
    "lib": ["es2019"],

    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "examples"]
}
